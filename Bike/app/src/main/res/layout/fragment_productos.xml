<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.productos.ProductosFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--    producto 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/producto1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:src="@drawable/pinon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PiÃ±on" />

                    <TextView
                        android:id="@+id/descripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16 velocidades," />

                    <TextView
                        android:id="@+id/precio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 215.000" />
                </LinearLayout>

            </LinearLayout>

            <!--    producto 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/producto2"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:src="@drawable/sillin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nombre2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sillin" />

                    <TextView
                        android:id="@+id/descripcion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ergonomico" />

                    <TextView
                        android:id="@+id/precio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 120.000" />
                </LinearLayout>

            </LinearLayout>

            <!--    producto 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/producto3"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:src="@drawable/manubrio" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nombre3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manubrio" />

                    <TextView
                        android:id="@+id/descripcion3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Echo en aluminio" />

                    <TextView
                        android:id="@+id/precio3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 180.000" />
                </LinearLayout>
            </LinearLayout>

            <!--    producto 4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/producto4"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:src="@drawable/marco" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nombre4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marco" />

                    <TextView
                        android:id="@+id/descripcion4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Echo en carbono" />

                    <TextView
                        android:id="@+id/precio4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 900.000" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>